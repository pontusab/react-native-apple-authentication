
{
  "compilerOptions": {
   "target": "esnext",
   "lib": ["dom", "esnext"],
   "jsx": "react-native",
   "moduleResolution": "node",
   "esModuleInterop": true,
   "allowSyntheticDefaultImports": true,
   "typeRoots": [
     "./ts-declarations",
     "node_modules/@types"
   ],
   "sourceMap": true,
   "declaration": true,
   "inlineSources": true,
   "strictNullChecks": true,
   "strictPropertyInitialization": true,
   "strictFunctionTypes": true,
   "skipLibCheck": true,
   "noImplicitThis": true,
   "noImplicitReturns": true,
   "outDir": "./build"
 },
 "include": ["./src"],
}